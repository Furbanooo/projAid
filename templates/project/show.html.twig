{% extends 'base.html.twig' %}

{% block title %}{{ project.title }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="p-6">
                <!-- Project Header -->
                <div class="flex justify-between items-start">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">{{ project.title }}</h1>
                        <p class="text-sm text-gray-500 mt-2">
                            Created by {{ project.initiator.username }} on {{ project.creationDate|date('F j, Y') }}
                        </p>
                    </div>
                    {% if app.user == project.initiator %}
                        <div class="flex space-x-2">
                            <form method="post" action="{{ path('project_delete', {id: project.id}) }}" 
                                  onsubmit="return confirm('Are you sure you want to delete this project?');">
                                <button type="submit" 
                                        class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition">
                                    Delete Project
                                </button>
                            </form>
                        </div>
                    {% endif %}
                </div>

                <!-- Project Description -->
                <div class="mt-6 prose max-w-none text-gray-700">
                    {{ project.description|nl2br }}
                </div>

                <div class="mt-6 flex items-center justify-between bg-gray-50 p-4 rounded-lg">
                    <div>
                        <h3 class="text-lg font-medium text-gray-900">Total Donations</h3>
                        <p class="text-3xl font-bold text-green-600">
                            {{ project.getTotalDonations()|number_format(2) }} units
                        </p>
                    </div>
                    {% if project.donations|length > 0 %}
                        <div class="text-sm text-gray-500">
                            from {{ project.donations|length }} donor{{ project.donations|length > 1 ? 's' : '' }}
                        </div>
                    {% endif %}
                </div>

                <!-- Project Content -->
                {% if project.content %}
                    <div class="mt-8">
                        {% if project.content.type == 'image' %}
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                {% for image in project.content.files %}
                                    <img src="{{ asset('uploads/projects/images/' ~ image) }}" 
                                         alt="Project image" 
                                         class="rounded-lg w-full h-48 object-cover">
                                {% endfor %}
                            </div>
                        {% else %}
                            <video controls class="w-full rounded-lg">
                                <source src="{{ asset('uploads/projects/videos/' ~ project.content.file) }}" 
                                        type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        {% endif %}
                    </div>
                {% endif %}

                <!-- Contributors Section -->
                <div class="mt-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Contributors</h2>
                    {% if project.contributors|length > 0 %}
                        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                            {% for contributor in project.contributors %}
                                <div class="flex items-center space-x-3 bg-gray-50 p-3 rounded-lg">
                                    <div class="flex-shrink-0">
                                        <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
                                            <span class="text-white font-semibold">
                                                {{ contributor.username|slice(0, 1)|upper }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <p class="text-sm font-medium text-gray-900 truncate">
                                            {{ contributor.username }}
                                        </p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-gray-500">No contributors yet.</p>
                    {% endif %}
                </div>

                <!-- Contribute Section -->
                {% if app.user and app.user != project.initiator and not project.contributors.contains(app.user) %}
                    <div class="mt-8 flex flex-col items-center border-t border-gray-200 pt-8">
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">Want to be part of this project?</h3>
                        <a href="{{ path('project_contribute', {id: project.id}) }}" 
                           class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition">
                            <i class="fas fa-users mr-2"></i>
                            Contribute to this project
                        </a>
                        
                        <!-- Donation Form -->
                        <div class="w-full max-w-md mt-8">
                            <h4 class="text-lg font-medium text-gray-900 mb-4">Support with donation</h4>
                            <form method="post" action="{{ path('project_donate', {id: project.id}) }}" class="space-y-4">
                                <div>
                                    <label for="amount" class="block text-sm font-medium text-gray-700">
                                        Donation amount (1-10000 units)
                                    </label>
                                    <div class="mt-1 relative rounded-md shadow-sm">
                                        <input type="number" name="amount" id="amount" 
                                               class="focus:ring-blue-500 focus:border-blue-500 block w-full pl-3 pr-12 sm:text-sm border-gray-300 rounded-md"
                                               placeholder="0.00" min="1" max="10000" step="0.01" required>
                                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                            <span class="text-gray-500 sm:text-sm">units</span>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" 
                                        class="w-full bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600 transition">
                                    Donate
                                </button>
                            </form>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}