{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Projects</h1>
        {% if app.user %}
            <a href="{{ path('project_new') }}" 
               class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700 transition duration-150">
                Create new project
            </a>
        {% else %}
            <a href="{{ path('app_login') }}" 
               class="text-blue-500 hover:text-blue-700">
                Login to create a project
            </a>
        {% endif %}
    </div>

    {% if projects is empty %}
        <div class="bg-gray-50 rounded-lg p-8 text-center">
            <p class="text-gray-500">No projects found. Please check back later!</p>
        </div>
    {% else %}
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% for project in projects %}
                <div class="bg-white rounded-lg shadow-md p-6 flex flex-col">
                    <h2 class="text-xl font-semibold mb-2">
                        <a href="{{ path('project_show', {id: project.id}) }}" 
                           class="text-blue-600 hover:text-blue-800">
                            {{ project.title }}
                        </a>
                    </h2>
                    <p class="text-gray-600 mt-2 flex-grow">
                        {{ project.description|slice(0, 100) }}...
                    </p>
                    <div class="flex items-center justify-between mt-4 text-sm text-gray-500">
                        <span>By {{ project.initiator.username }}</span>
                        <span>{{ project.contributors|length }} contributors</span>
                    </div>
                    {% if app.user and app.user != project.initiator and not project.contributors.contains(app.user) %}
                        <div class="mt-4 pt-4 border-t border-gray-200">
                            <a href="{{ path('project_contribute', {id: project.id}) }}" 
                               class="block text-center bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700 transition duration-150">
                                Contribute to Project
                            </a>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}